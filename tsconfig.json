{
  "compilerOptions": {
    "target": "es2017",                     
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,                  
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "pretty": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules"
  ]
}